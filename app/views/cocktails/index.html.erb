<div class="main-container">
  <h1 class="text-center mt-4">All Cocktails</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(38,35,34,1) 0%, rgba(30,134,181,1) 86%)"><%= link_to cocktail.name, cocktail_path(cocktail), class: "white"%></div>
  <% end %>
</div>

</div>
